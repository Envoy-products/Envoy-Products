  <div class="container">
    <div class="row">
      <section class="post">
      <h2>Pending Articles</h2>
      {{#each posts_pending as |post|}}
        <article class="post-list">
          <div class="title-bar">
            <div class="title">
              <h3><a href="/articles/{{id}}">{{title}}</a></h3>
            </div>
            {{> meta post}}
          </div>
          <div class="content">{{format_cut_content post_content}} <a href="/article/{{id}}"> &hellip; read more</a></div>

        </article>
      {{/each}}
      </section>
    <section class="post">
      <h2>Approved Articles</h2>
      {{#each posts_public as |post|}}
        <article class="post-list">
          <div class="title-bar">
            <div class="title">
              <h3><a href="/articles/{{id}}">{{title}}</a></h3>
            </div>
            {{> meta post}}
          </div>
          <div class="content">{{format_cut_content post_content}} <a href="/article/{{id}}"> &hellip; read more</a></div>

        </article>
      {{/each}}

    </section>
    <aside>
      {{#if loggedIn}}
        <a href="/articles/add" class="button">Add an article</a>
      {{else}}
      <p>&nbsp;</p>
      {{/if}}

      </aside>
    </div>
  </div>
