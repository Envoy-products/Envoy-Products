<div class="panel">
    <div class="panel-heading">
        <h1 class="panel-title">{{name}}</h1>
    </div>
    <div class="panel-body">
        <div>
            <img class="product-picture" src="{{check_url product_img}}" alt="{{name}}" height="150">
        </div>
        <div class="product-description">
            <p class="product-text">{{description}}</p>
            <hr>
        </div>

        <div class="text-center button-position">
            <a class="button product-text" href="/products/{{id}}">
                Learn More
            </a>
        </div>
    </div>
</div>