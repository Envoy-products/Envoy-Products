<div class="panel">
    <div class="panel-heading">
        <h1>{{name}}</h1>
    </div>
    <div class="panel-body">
        <div>
            <img class="product-picture" src="{{product_img}}" alt="{{name}}" width="150" height="150">
        </div>
        <div class="product-description">
            <p class="product-text">{{description}}</p>
            <hr>
        </div>

        <div class="text-center button-position">
            <a class="button" class="product-text" href="/products/{{id}}">
                Learn More
            </a>
        </div>
    </div>
</div>
